{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "esnext.asynciterable",
      "es2020.bigint"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "../lib",
    "downlevelIteration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strictBindCallApply": true
  }
}
